<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <!--User Name-->
    <h1 class="text-center user-show-name"><%= @user.profile.first_name %> <%= @user.profile.last_name %></h1>
    
    <!--User Profile Picture-->
    <div class="text-center">
      <%= image_tag @user.profile.avatar.url, class: 'user-show-avatar' %>
    </div>
    
    <!--Student or Professor Tag-->
    <h3 class="text-center"><span class="job-title-icon"><%= job_title_icon %></span> <%= @user.profile.job_title %></h3>
    
    <hr/>
    
    <!--User Biography-->
    <div class="well profile-block profile-description">
      <h3>Bio</h3>
      <%= @user.profile.description %>
    </div>
    
    <% if current_user.plan_id == 2 || current_user = @user %>
      <!--User Contact Info-->
      <div class="well profile-block contact-info">
        <h3>Contact Info</h3>
        <%= @user.profile.phone_number %><br/>
        <%= @user.profile.contact_email %><br/>
      </div>
    <% end %>
    
  </div>
</div>