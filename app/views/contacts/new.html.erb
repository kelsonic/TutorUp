<div class="row">
  <div class="col-md-8 col-md-offset-2 well text-center jumbotron">
    <h1>Contact <span class="blue-color">Us</span></h1>
    <h3>Have a <span class="blue-color">question</span> or comment? Reach out to us!</p>
  </div>
  
  <div class="col-md-6 col-md-offset-3">
    <div class="well text-center">
      <%= form_for @contact do |f| %>
      
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        
        <div class="form-group">
          <%= f.label :comments %>
          <%= f.text_area :comments, rows: 5, class: 'form-control' %>
        </div>
        
        <%= f.submit "Send", class: 'btn-lg btn-success btn-block' %>
        
      <% end %>
    </div>
  </div>
</div>