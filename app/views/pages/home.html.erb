<div class="jumbotron text-center">
  <h1>Welcome to Tutor Hub</h1>
  <h3>A membership site where students meet professors.</h3>
</div>
<div class="row text-center">
  
  <% if user_signed_in? %>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Your Profile</h2>
        <% if current_user.profile %>
          <%= link_to "Edit Your Profile", edit_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
          <%= link_to "View Your Profile", user_path(current_user), class: 'btn btn-default btn-lg btn-block' %>
        <% else %>
          <p>Start off right by creating your own profile!</p>
          <%= link_to "Create Your Profile", new_user_profile_path(current_user), class: 'btn btn-default btn-lg btn-block'%>
        <% end %>
      </div>
    </div>
    <div class="col-md-6 well">
      <h2 class="text-center">The Community</h2>
      <p>Visit the community to meet other professors or students!</p>
      <%= link_to "Visit the Community", users_path, class: 'btn btn-default btn-lg btn-block' %>
    </div>
  <% else %>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Basic Membership</h2>
        <h4>A free account gives you access to the community.</h4>
        <br/>
        <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg' %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="well">
        <h2 class="text-center">Premium Membership</h2>
        <h4>Only $10/month to access the community and contact details.</h4>
        <br/>
        <%= link_to "Sign up with Premium", new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg' %>
      </div>
    </div>
  <% end %>
  
</div>